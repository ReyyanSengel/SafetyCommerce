@model UserRegisterViewModel

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="card-title">
                            <h4>Güvenli Alım Satım</h4>
                        </div>
                        <form asp-controller="Register" asp-action="Index" class="pt-3" method="post">
                            <div class="form-group">
                                <label>Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input type="text" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Surname</label>
                                <span asp-validation-for="SurName" class="text-danger"></span>
                                <input type="text" asp-for="SurName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>User Name</label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <input type="text" asp-for="UserName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Email Adress</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <input type="text" asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <input type="text" asp-for="Password" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label>Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <input type="text" asp-for="ConfirmPassword" class="form-control" />
                            </div>

                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="mt-3">
                                <button class="btn btn-primary" type="submit">Register</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>