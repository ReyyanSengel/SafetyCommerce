                <input class="form-control" type="text" asp-for="NameSurname" placeholder="Alıcı Adı ve Soyadı" />
            </div>
            <br />
            <div class="form-group">
                <input class="form-control" type="text" asp-for="TCKN" placeholder="T.C. Kimlik Numarası" />
            </div>
            <br />
            <div class="form-group">
                <input class="form-control" type="text" asp-for="ReceiverPhone" placeholder="Alıcı Cep Telefonu Numarası" />
            </div>
            <br />
            <a asp-action="Index" asp-controller="Home" class="btn btn-light ">Vazgeç</a>
            <a asp-controller="Receiver" asp-action="ReceiverAuthenticatorVerify" class="btn btn-info mr-2">Devam</a>


        </form>





</div>

